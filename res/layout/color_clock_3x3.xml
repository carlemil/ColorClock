<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/root_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:clickable="true"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="@dimen/widget_margin">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:baselineAligned="false">

        <LinearLayout
                android:id="@+id/digit_0ll"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/digit_spacing"
                android:background="@color/default_digit_border_color"
                android:gravity="center"
                android:visibility="gone">

            <TextView
                    android:id="@+id/digit_0"
                    style="@android:style/TextAppearance.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="@dimen/digit_border_width"
                    android:gravity="center"
                    android:shadowColor="@color/default_digit_shadow_color"
                    android:shadowDx="@integer/default_digit_shadow_dx"
                    android:shadowDy="@integer/default_digit_shadow_dy"
                    android:shadowRadius="@integer/default_digit_shadow_radius"
                    android:text="0"
                    android:textColor="@color/default_digit_color"
                    android:textSize="@dimen/digit_font_size"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/digit_1ll"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent"
