<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/digit_0"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/digit_margin"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="0"
            android:textColor="@color/default_digit_color"
            android:textSize="@dimen/digit_size" />

        <TextView
            android:id="@+id/digit_1"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/digit_margin"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="1"
            android:textColor="@color/default_digit_color"
            android:textSize="@dimen/digit_size" />

        <TextView
            android:id="@+id/digit_2"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/digit_margin"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="2"
            android:textColor="@color/default_digit_color"
            android:textSize="@dimen/digit_size" />

        <TextView
            android:id="@+id/digit_3"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/digit_margin"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="3"
            android:textColor="@color/default_digit_color"
            android:textSize="@dimen/digit_size" />

        <TextView
            android:id="@+id/digit_4"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/digit_margin"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="4"
            android:textColor="@color/default_digit_color"
            android:textSize="@dimen/digit_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/digit_5"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/digit_margin"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="5"
            android:textColor="@color/default_digit_color"
            android:textSize="@dimen/digit_size" />

        <TextView
            android:id="@+id/digit_6"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/digit_margin"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="6"
            android:textColor="@color/default_digit_color"
            android:textSize="@dimen/digit_size" />

        <TextView
            android:id="@+id/digit_7"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/digit_margin"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="7"
            android:textColor="@color/default_digit_color"
            android:textSize="@dimen/digit_size" />

        <TextView
            android:id="@+id/digit_8"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/digit_margin"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="8"
            android:textColor="@color/default_digit_color"
            android:textSize="@dimen/digit_size" />

        <TextView
            android:id="@+id/digit_9"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/digit_margin"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="9"
            android:textColor="@color/default_digit_color"
            android:textSize="@dimen/digit_size" />
    </LinearLayout>

</LinearLayout>